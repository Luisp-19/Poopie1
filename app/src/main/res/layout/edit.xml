<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/nota_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nota_1"
        android:autofillHints="@string/nota_1"
        android:fontFamily="sans-serif-light"
        android:inputType="textAutoComplete"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/subnota_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nota_2"
        android:autofillHints="@string/nota_2"
        android:fontFamily="sans-serif-light"
        android:inputType="textAutoComplete"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/button_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_secondary"
        android:text="@string/botao_edit"
        android:onClick="saveNotas"/>

</LinearLayout>


